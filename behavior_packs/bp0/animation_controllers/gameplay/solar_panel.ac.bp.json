{
    "format_version": "1.10.0",
    "animation_controllers": {
        
        "controller.animation.solar_panel": {
            "initial_state": "default",
            "states": {
                
                "default": {
                    "transitions": [     
                        { "give_small": "query.variant == 1 && (query.time_of_day >= 0.25 && query.time_of_day <= 0.75) " },
                        { "give_big": "query.variant == 2 && (query.time_of_day >= 0.25 && query.time_of_day <= 0.75)" }
                    ]
                },
                "give_small" : {
                    "transitions": [     
                        { "default": "query.variant == 0 || (query.time_of_day < 0.25 || query.time_of_day > 0.75)" }
                    ],
                    "animations" : [
                        "give_normal"
                    ]
                },
                "give_big" : {
                    "transitions": [     
                        { "default": "query.variant == 0 || (query.time_of_day < 0.25 || query.time_of_day > 0.75)" }
                    ],
                    "animations" : [
                        "give_advanced"
                    ]
                }
            }
        }
    }
}