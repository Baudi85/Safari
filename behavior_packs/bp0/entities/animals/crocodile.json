{
    "format_version": "1.8.0",
    "minecraft:entity": {

      "description": {
        "identifier": "animal:crocodile",
        "is_spawnable": true,
        "is_summonable": true,
        "is_experimental": false
      },


      "component_groups": {
        
        "cg:interact" : {
          "minecraft:interact": [
            {
             "on_interact": {  "filters": {"all_of": [  {"test": "has_equipment","domain": "hand","subject": "other","value": "gameplay:cotton_bud"} ]}},
             "use_item": true,
             "swing": true,
             "interact_text" : "action.interact.take_dna",
             "spawn_items": {"table": "loot_tables/dna/04.json"},
             "play_sounds": "random.pop"
            }
          ]
        },
        
          "minecraft:baby": {
            "minecraft:is_baby": {
            },
            "minecraft:scale": {
              "value": 0.4
            },
            "minecraft:ageable": {
              "duration": 1200,
              "feedItems": [
                "apple",
                "carrot" ],
              "grow_up": {
                "event": "minecraft:ageable_grow_up",
                "target": "self"
              }
            },
            "minecraft:movement": {  "value": 0.20 },
            "minecraft:behavior.follow_parent": {
              "priority": 6,
              "speed_multiplier": 1.1
            }
        },


        "minecraft:adult": {
          "minecraft:scale": {
            "value": 1
          },
          "minecraft:loot": {
            "table": "loot_tables/entities/crocodile.json"
          },
          "minecraft:experience_reward": {
            "on_bred": "Math.Random(1,7)",
            "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
          },
          "minecraft:movement": {  "value": 0.15 },

          "minecraft:behavior.nearest_attackable_target": {
            "priority": 2,
            "entity_types": [
              {
                "filters": {
                  "test": "is_family",
                  "subject": "other",
                  "value": "victim"
                },
                "max_dist": 48
              },
              {
                "filters": {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                },
                "max_dist": 8
              }
            ],
            "must_see": true
          },
          "minecraft:behavior.delayed_attack": {
            "priority": 3,
            "attack_duration": 0.8,
            "hit_delay_pct": 0.8,
            "speed_multiplier": 1.2,
            "reach_multiplier": 1.4,
            "track_target": true
          },
          "minecraft:attack": {
            "damage": 13
          },
          "minecraft:breedable": {
            "requireTame": false,
            "breedsWith": {
              "mateType": "animal:hyena",
              "babyType": "animal:hyena",
              "breed_event": {
                "event": "minecraft:entity_born",
                "target": "baby"
              }
            },
            "breedItems": [           
              "rotten_flesh",
              "chicken",
              "beef",
              "steak" ]
          }


        }

      },
  
  
      "components": {

        "minecraft:type_family": {     "family": [ "mob" , "crocodile"]     },
        "minecraft:physics": {},
        "minecraft:health": {    "value": 15,   "max": 15   },
        "minecraft:movement.basic": {},
        "minecraft:jump.static": {},
        "minecraft:can_climb": {},
        "minecraft:collision_box": {
            "width": 1.5,
            "height": 0.4
        },
        "minecraft:navigation.walk": {   "can_path_over_water": true,   "avoid_water": true,   "avoid_damage_blocks": true   },
        "minecraft:behavior.panic": {
          "priority": 3,
          "speed_multiplier": 1.25
        },
        "minecraft:behavior.random_stroll": {
          "priority": 7,
          "speed_multiplier": 1.0
        },
        "minecraft:behavior.look_at_player": {
          "priority": 8,
          "look_distance": 6.0,
          "probability": 0.02
        },
        "minecraft:behavior.random_look_around": {
          "priority": 9
        },
        "minecraft:experience_reward": {
          "on_bred": "Math.Random(1,7)",
          "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
        },
        "minecraft:scale": {     "value": 1   },
        "minecraft:behavior.mount_pathing": {
          "priority": 1,
          "speed_multiplier": 1.25,
          "target_dist": 0.0,
          "track_target": true
        },
        "minecraft:behavior.float": {
          "priority": 2
        }
      },
  
  
      "events": {
        "minecraft:entity_spawned": {
          "randomize": [
            {
              "weight": 9,
              "remove": {},
              "add": { "component_groups": ["minecraft:adult", "cg:interact"]}
            },
            {
              "weight": 3,
              "remove": {},
              "add": {"component_groups": ["minecraft:baby", "cg:interact"]}
            }
          ]
        },
        "minecraft:entity_born": {
          "add": {  "component_groups": [ "minecraft:baby", "cg:interact" ]  }
        },
        "minecraft:ageable_grow_up": {
            "remove": {   "component_groups": ["minecraft:baby"]  },
            "add": {  "component_groups": [   "minecraft:adult"    ]}
        }
      }
    }
  }
  