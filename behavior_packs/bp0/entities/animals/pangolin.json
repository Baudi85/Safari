{
    "format_version": "1.8.0",
    "minecraft:entity": {

      "description": {
        "identifier": "animal:pangolin",
        "is_spawnable": true,
        "is_summonable": true,
        "is_experimental": false
      },


      "component_groups": {

        "cg:interact" : {
          "minecraft:interact": [
            {
             "on_interact": {  "filters": {"all_of": [  {"test": "has_equipment","domain": "hand","subject": "other","value": "gameplay:cotton_bud"} ]}},
             "use_item": true,
             "swing": true,
             "interact_text" : "action.interact.take_dna",
             "spawn_items": {"table": "loot_tables/dna/16.json"},
             "play_sounds": "random.pop"
            }
          ]
        },


        "minecraft:scared_one":{
          "minecraft:damage_sensor":[
            {
               "cause":"all",
               "deals_damage":false
            }
          ],
          "minecraft:is_illager_captain":{},
          "minecraft:movement": {  "value": 0 },
          "minecraft:timer": {"looping": false,"time": 1.6,"time_down_event": {"event": "evt:reset"}}
        },
        "minecraft:scared_two":{
          "minecraft:damage_sensor":[
            {
               "cause":"all",
               "deals_damage":false
            }
          ],
          "minecraft:is_illager_captain":{},
          "minecraft:movement": {  "value": 0 },
          "minecraft:timer": {"looping": false,"time": 3,"time_down_event": {"event": "evt:reset"}}
        },
        "minecraft:scared_three":{
          "minecraft:damage_sensor":[
            {
               "cause":"all",
               "deals_damage":false
            }
          ],
          "minecraft:is_illager_captain":{},
          "minecraft:movement": {  "value": 0 },
          "minecraft:timer": {"looping": false,"time": 6,"time_down_event": {"event": "evt:reset"}}
        },






        "minecraft:baby": {
            "minecraft:is_baby": {
            },
            "minecraft:scale": {
              "value": 0.7
            },
            "minecraft:ageable": {
              "duration": 1200,
              "feedItems": [           
                "apple",
                "carrot" ],
              "grow_up": {
                "event": "minecraft:ageable_grow_up",
                "target": "self"
              }
            },
            "minecraft:behavior.follow_parent": {
              "priority": 6,
              "speed_multiplier": 1.1
            }
        },


        "minecraft:adult": {
            "minecraft:loot": {
              "table": "loot_tables/entities/pangolin.json"
            },
            "minecraft:experience_reward": {
              "on_bred": "Math.Random(1,7)",
              "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
            },
            "minecraft:scale": {     "value": 1   },
            "minecraft:behavior.breed": {
              "priority": 4,
              "speed_multiplier": 1.0
            },
            "minecraft:breedable": {
              "requireTame": false,
              "breedsWith": {
                "mateType": "animal:pangolin",
                "babyType": "animal:pangolin",
                "breed_event": {
                  "event": "minecraft:entity_born",
                  "target": "baby"
                }
              },
              "breedItems": [           
                "wheat" ]
            }
        },
        "minecraft:can_move":{
          "minecraft:movement": {  "value": 0.15 },
          "minecraft:navigation.walk": {   "can_path_over_water": true,   "avoid_water": true,   "avoid_damage_blocks": true   },
          "minecraft:behavior.panic": {
            "priority": 3,
            "speed_multiplier": 1.25
          },
          "minecraft:behavior.random_stroll": {
            "priority": 7,
            "speed_multiplier": 1.0
          },
          "minecraft:behavior.look_at_player": {
            "priority": 8,
            "look_distance": 6.0,
            "probability": 0.02
          },
          "minecraft:behavior.random_look_around": {
            "priority": 9
          }
        }
      },
  
  
      "components": {

        "minecraft:type_family": {     "family": [ "mob" , "pangolin" , "victim"]     },
        "minecraft:physics": {},
        "minecraft:health": {    "value": 7,   "max": 7   },
        "minecraft:movement.basic": {},
        "minecraft:jump.static": {},
        "minecraft:can_climb": {},
        "minecraft:collision_box": {
            "width": 0.6,
            "height": 0.6
        },
        "minecraft:behavior.mount_pathing": {
          "priority": 1,
          "speed_multiplier": 1.25,
          "target_dist": 0.0,
          "track_target": true
        },
        "minecraft:behavior.float": {
          "priority": 2
        },
        "minecraft:on_hurt": {
          "event": "evt:hurt",
          "target": "self"
        },
        "minecraft:on_hurt_by_player": {
          "event": "evt:hurt",
          "target": "self"
        }
      },
  
  
      "events": {
        "minecraft:entity_spawned": {
          "randomize": [
            {
              "weight": 9,
              "remove": {},
              "add": { "component_groups": ["minecraft:adult" , "minecraft:can_move" , "cg:interact"]}
            },
            {
              "weight": 3,
              "remove": {},
              "add": {"component_groups": ["minecraft:baby", "minecraft:can_move", "cg:interact"]}
            }
          ]
        },
        "minecraft:entity_born": {
          "add": {  "component_groups": [ "minecraft:baby", "minecraft:can_move" , "cg:interact"]  }
        },
        "minecraft:ageable_grow_up": {
            "remove": {   "component_groups": ["minecraft:baby"]  },
            "add": {  "component_groups": [   "minecraft:adult"    ]}
        },
        "evt:hurt":{
          "randomize": [
            {
              "weight": 6
            },
            {
              "weight": 3,
              "add": {"component_groups": ["minecraft:scared_one"]},
              "remove": {   "component_groups": ["minecraft:can_move"]}
            },
            {
              "weight": 2,
              "add": {"component_groups": ["minecraft:scared_two"]},
              "remove": {   "component_groups": ["minecraft:can_move"]}
            },
            {
              "weight": 1,
              "add": {"component_groups": ["minecraft:scared_three"]},
              "remove": {   "component_groups": ["minecraft:can_move"]}
            }
          ]
        },
        "evt:reset":{
          "add": {"component_groups": ["minecraft:can_move"]},
          "remove": {   "component_groups": ["minecraft:scared_one","minecraft:scared_two","minecraft:scared_three" ]}
        }
      }
    }
  }
  