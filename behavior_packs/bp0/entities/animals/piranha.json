{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "animal:piranha",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      
      "cg:interact" : {
        "minecraft:interact": {
          "interactions": [
            {
              "on_interact": {  "filters": {"all_of": [  {"test": "has_equipment","domain": "hand","subject": "other","value": "gameplay:cotton_bud"} ]}},
              "use_item": true,
              "swing": true,
              "interact_text" : "action.interact.take_dna",
              "spawn_items": {"table": "loot_tables/dna/17.json"},
              "play_sounds": "random.pop"
             }
          ]
        }
      },
      "minecraft:jaws": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? Math.Random(30,35) : 0"
        },
        "minecraft:scale": {
          "value": 1
        },
        "minecraft:attack": {
          "damage": 6
        },
        "minecraft:collision_box": {
          "width": 0.5,
          "height": 0.8
        },
        "minecraft:knockback_resistance": {
          "value": 1
        },
        "minecraft:underwater_movement": {
          "value": 0.34
        },
        "minecraft:health": {
          "value": 6,
          "max": 6
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 3,
          "within_radius": 48,
          "reselect_targets": true,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  { "test": "is_family", "subject": "other", "operator": "=", "value": "player" }
                ]
              },
              "max_dist": 32
            }
          ],
          "must_see": true,
          "must_see_forget_duration": 17.0,
          "persist_time": 0.5
        }
      }
    },
    "components": {

      "minecraft:type_family": {
        "family": [ "piranha", "fish", "cod" ]
      },
      "minecraft:experience_reward": {
        "on_bred": "Math.Random(1,7)",
        "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/piranha.json"
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_air": false,
        "breathes_water": true
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:navigation.generic": { // Allows the mob to go through water
        "is_amphibious": false,
        "can_path_over_water": false,
        "can_swim": true,
        "can_walk": false,
        "can_breach": false,
        "can_sink": false
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:movement.sway": {
        "sway_amplitude": 0.0
      },
      "minecraft:behavior.swim_idle": {
        "priority": 5
      },
      "minecraft:behavior.random_swim": { 
        "priority": 3,
        "speed_multiplier": 1.0,
        "xz_dist": 16,
        "y_dist": 4,
        "interval": 0
      },
      "minecraft:behavior.swim_wander": {
        "priority": 4,
        "speed_multiplier": 1.0,
        "interval": 10,
        "look_ahead": 2.0
      },
      "minecraft:attack": {
        "damage": 1
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.melee_attack": {
        "priority": 2,
        "speed_multiplier": 1.2,
        "track_target": false,
        "require_complete_path": true
      },
      "minecraft:flocking": {
        "in_water": true,
        "match_variants": false,
        "use_center_of_mass": true,
        "low_flock_limit": 4,
        "high_flock_limit": 8,
        "goal_weight": 2.0,
        "loner_chance": 0.1,
        "influence_radius": 3.0,
        "breach_influence": 7.0,
        "separation_weight": 1.75,
        "separation_threshold": 0.95,
        "cohesion_weight": 2.0,
        "cohesion_threshold": 1.95,
        "innner_cohesion_threshold": 1.25,
        "min_height": 1.5,
        "max_height": 6.0,
        "block_distance": 2.0,
        "block_weight": 0.85
      },
      "minecraft:nameable": {
      },
      "minecraft:on_target_acquired": {
        "event": "minecraft:has_target",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "minecraft:lost_target",
        "target": "self"
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": { "component_groups": [ "minecraft:jaws" , "cg:interact"] }
      }
      
    }
  }
}