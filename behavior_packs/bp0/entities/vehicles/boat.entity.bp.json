{
    "format_version": "1.12.0",
    "minecraft:entity": {
        "description": {
            "identifier": "vehicle:new_boat",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "new:one":   {   "minecraft:variant": {   "value": 0}   },


            "new:saddled":{  
                "minecraft:is_saddled":{}, 
                "minecraft:timer": {"looping": false,"time": 0.05,"time_down_event": {"event": "evt:reset"}}
            },


            "new:rideable": {
                "minecraft:rideable": {
                    "seat_count": 7,
                    "interact_text": "action.interact.mount",

                    "family_types": [
                        "player"
                    ],
                    "seats": [
                        {  "position": [-0.1, 0.7, -1.3] },
                        {  "position": [0.9, 0.7, 2.2] },
                        {  "position": [-0.9, 0.7, 2.2] },
                        {  "position": [0, 0.7, 2.2] },
                        {  "position": [0.9, 0.7, 0.7] },
                        {  "position": [-0.9, 0.7, 0.7] },
                        {  "position": [0, 0.7, 0.7] }

                    ]
                },
                "minecraft:is_charged": {}
            }

        },
        "components": {
            "minecraft:interact": [
                {
                    "on_interact": {
                        "filters": {"all_of": [{ "test": "has_component", "subject": "self", "operator": "!=", "value": "minecraft:is_sheared" },
                                {"test": "has_equipment","domain": "hand","subject": "other","value": "tool:recolor"}]},
                        "event": "evt:cycle"
                    },
                    "use_item": false,
                    "swing": true,
                    "interact_text" : "action.interact.recolor"
                }
            ],
            "minecraft:behavior.rise_to_liquid_level": {
                "priority": 0,
                "liquid_y_offset": 0.5,
                "rise_delta": 0.05,
                "sink_delta": 0.05
            },
            "minecraft:underwater_movement": {
                "value": 0.2
            },
            "minecraft:navigation.walk": {
                "can_sink": false
            },
            "minecraft:scale" : {"value" : 1.1 } ,
            "minecraft:input_ground_controlled": {},
            "minecraft:health": {
                "value": 10,
                "max": 10
            },
            "minecraft:movement": {
                "value": 0.06
            },
            "minecraft:loot": {
                "table": "loot_tables/vehicles/boat.loot.json"
            },
            "minecraft:movement.basic": {},
            "minecraft:collision_box": {
                "width": 2.8,
                "height": 1
            },
            "minecraft:physics": {}
        },
        "events": {
            "minecraft:entity_spawned": {
                "randomize": [
                    {  "weight": 5,    "add": {   "component_groups": [ "new:one"   , "new:rideable"]  }}
                ]
            },
            "evt:reset":{
                "remove":  {"component_groups": [ "new:saddled" ]}
            },
            "evt:cycle":{
                "sequence": [
                    {
                        "add":    {"component_groups": [ "new:saddled" ]}
                    }
                ]
            }
        }
    }
}