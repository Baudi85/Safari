{
    "format_version" : "1.10.0",
    "animation_controllers":{
        "controller.animation.furniture.barbecue": {
            "initial_state" : "open",

            "states": {
                "closed": {
                    "animations" : [   
                        "bbq_open"   
                    ],
                    "blend_transition" : 0.5,
                    "transitions" : [
                        {
                            "open" : "query.is_illager_captain"
                        }
                    ]
                },
                "open":{
                    "animations" : [   
                        "bbq_close"   
                    ],
                    "blend_transition" : 0.5,
                    "transitions" : [
                        {
                            "closed" : "!query.is_illager_captain"
                        }
                    ]
                }
            }
        }
    }
}