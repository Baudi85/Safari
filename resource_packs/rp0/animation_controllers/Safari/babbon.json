{
    "format_version" : "1.10.0",
    "animation_controllers":{
        "controller.animation.babbon.general": {
            "initial_state" : "default",
            "states": {
                "default": {
                    "animations" : [
                        "idle",
                        "look_at_target"
                    ],
                    "blend_transition" : 0.3,
                    "transitions" : [
                        {
							"walk" : "query.modified_move_speed > 0.1"
						}
                    ]
                },
                "walk":{
                    "animations" : [
                        "walk",
                        "look_at_target"
                    ],
                    "blend_transition" : 0.3,
                    "transitions" : [
                        {
							"default" : "query.modified_move_speed < 0.1"
						}
                    ]
                }
            }
        }
    }
}