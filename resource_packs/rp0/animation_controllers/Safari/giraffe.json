{
    "format_version" : "1.10.0",
    "animation_controllers":{
        "controller.animation.giraffe.general": {
            "initial_state" : "default",
            "states": {
                "default": {
                    "animations" : [
                        "idle",
                        "look_at_target",
                        {
                            "walk" : "query.modified_move_speed"
                        }
                    ],
                    "blend_transition" : 0.6,
                    "transitions" : [
						{
							"sleep" : "query.is_sleeping"
						}
                    ]
                },
                "sleep" : {
					"animations" : [ "sleep" ],
					"blend_transition" : 0.6,
					"transitions" : [
						{
							"default" : "!query.is_sleeping"
						}
					]
                }
            }
        }
    }
}