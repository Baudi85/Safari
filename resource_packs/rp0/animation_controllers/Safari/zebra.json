{
    "format_version" : "1.10.0",
    "animation_controllers":{
        "controller.animation.zebra.general": {

            "initial_state" : "default",
            "states": {

                "default": {
                    "animations" : [
                        "idle",
                        "look_at_target",
                        {
                            "walk" : "query.modified_move_speed"
                        }
                    ],
                    "transitions" : [
                        {
                            "grazing" : "query.is_grazing"
                        }
                    ]
                },

                "grazing":{
                    "animations" : [ "varOne" ],
					"transitions" : [
						{
							"default" : "query.all_animations_finished"
						}
					]
                }
                
            }
        }
    }
}